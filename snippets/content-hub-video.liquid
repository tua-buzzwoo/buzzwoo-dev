<div class="content-hub-item video block-{{ index }}" {% if block.settings.anchor != blank %} id="{{ block.settings.anchor }}" {% endif %}>
  {% if block.settings.video_url != blank %}
    {% if block.settings.video_url.type == "youtube" %}
      <div class="wrapper">
        <img class="video-cover" src="https://i.ytimg.com/vi/{{ block.settings.video_url.id }}/maxresdefault.jpg">
        <iframe allow="autoplay; encrypted-media" allowfullscreen class="player" frameborder="0" height="400" src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"></iframe>
        <button class="play-btn">
          <img src="{{ 'play.png' | asset_url }}" alt="play">
        </button>
      </div>
    {% endif %}
  {% endif %}
</div>